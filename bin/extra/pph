#!/usr/bin/env bash
set -e

## Description: shows proofs found per hour, over the past 'n' hours
#OPTSTR='g'

while getopts "gv" opt; do
  case "$opt" in
    g)
        GRAPH=true
        ;;
    v)
        set -x
        ;;
    *)
        usage
        ;;
    esac
done
shift "$((OPTIND-1))"

HOURS=${1:-24}
TMPOUT=$(mktemp /tmp/tmpXXXXXXXXXX)
WIDTH=$(echo "$(($(tput cols) - 20))")

function shutdown() {
  tput cnorm
	rm $TMPOUT
}
trap shutdown EXIT

function cursorBack() {
  echo -en "\033[$1D"
}

function spinner() {
	local LC_CTYPE=C
	tput civis
	local CL="\e[2K"
	local spin="⣷⣯⣟⡿⢿⣻⣽⣾"
	local pid=$(jobs -p)
	local charwidth=1
  while kill -0 $pid 2>/dev/null; do
    local i=$(((i + $charwidth) % ${#spin}))
    printf "%s" "$(tput setaf 2)${spin:$i:$charwidth}$(tput sgr0)"
    cursorBack 1
    sleep .1
  done
	tput cnorm
	wait $(jobs -p)
}

echo "Calculating Proofs Per Hour"
echo -n "for the past $HOURS hours... "

function findProofs() {
		for H in $(seq 1 $HOURS | xargs -I {} date -d '{} hour ago' "+%FT%H") ; do
			PROOFS=$(echo "$(rg 'Found [1-9] proofs' <( rg $H ~/.chia/mainnet/log/harvester-debug.log{,.1,.2}) | wc -l)")
			paste <(echo $H) <(printf "%6s\n" "$PROOFS")
		done | tac
}

function proofGraph() {
  if ! [ -x "$(command -v uplot)" ]; then
    echo 'Error: uplot is not installed, or installed gem is not added to PATH' >&2
    echo 'Get it at:  https://github.com/red-data-tools/YouPlot' >&2
    echo 'Get it with:  gem install youplot' >&2
    exit 1
  fi
  findProofs > $TMPOUT & spinner
  echo ""
  LOW=$(cat $TMPOUT | choose 1 | sort -n -r | tail -n1)
  MAX=$(cat $TMPOUT | choose 1 | sort -n | tail -n1)
  SUM=$(cat $TMPOUT | choose 1 | paste -sd+ | bc)
  AVG=$(echo "scale=0; $SUM / $HOURS" | bc -l)
  cat $TMPOUT | choose 1 | tac | nl -n ln | tac | column -t | tr -s ' ' ','| sed 's/^/-/' | uplot line --canvas braille -d , -b barplot -w $(($(tput cols) - 30)) -h 15 --xlabel "Hour" --ylabel "Proofs" -t "Proofs Per Hour" --xlim -$HOURS,0 --ylim $LOW,$MAX
  echo "Average: $AVG"
  echo "Total: $SUM"
#  cat $TMPOUT | tr -s ' ' ',' | uplot line --canvas braille -H -d , -b barplot -w $WIDTH -h 20 -x "Hour" -y "Proofs" -t "Proofs Per Hour"
}

function printProofs() {
	findProofs > $TMPOUT & spinner
	{
		printf '\n\n%9s\t%8s\n' "Hour" "Proofs";
    #printf "${CL}"
    #echo -ne "\r"
		cat $TMPOUT;
	}
}

if [[ $GRAPH == true ]]; then
  proofGraph
else
  printProofs
fi
